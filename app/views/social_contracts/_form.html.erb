<%= form_for(@social_contract) do |f| %>
  <% if @social_contract.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@social_contract.errors.count, "error") %> prohibited this social_contract from being saved:</h2>

      <ul>
      <% @social_contract.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
	<div>
		<%= f.label :name %><br />
		<%= f.text_field :name %>
	</div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :conclusion %><br />
    <%= f.text_area :conclusion %>
  </div>
  <div class="field">
    <%= f.label :group %><br />
    <%= f.text_field :group %>
  </div>
        <!-- Need to insert the flag to change between voting types here-->
  <%= f.fields_for :referendum, @social_contract.referendums do |r| %>
	<div class="field">
		<%= r.label :question %> <br />
		<%= r.text_field :question %>
	</div>
    <% end %>

	<div class="actions">
		<%= f.submit %>
	</div>
<% end %>
